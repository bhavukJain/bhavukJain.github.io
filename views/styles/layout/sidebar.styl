.outer
  display flex
  flex-direction row
  flex 1
  min-height 100%
  height 100%
  .sidebar
    flex 0 0 375px
    width 375px
    height 100%
    background-color white
    position fixed
    min-height 100%
    margin 0 auto
    text-align center
    display flex
    flex-direction column
    align-items: center
    justify-content space-between
  .contentbar
    margin-left 375px
    height 100%
    width 100%
    box-sizing border-box

@media screen and (max-width: 750px)
  .outer
    flex-direction column
    .sidebar
      position relative
      width 100%
      // only if want short behavior
      height auto
      flex 1
    .contentbar
      margin-left 0
      width 100%
